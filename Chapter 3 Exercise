//Ex 3.6
//Use a range for to change all the character in a string to x.
#include <iostream>
#include <string>

using namespace std;

int main()
{
     string word1("some character");

     for (auto &i : word1){
     i = 'X';
     }
    cout << word1 << endl;
    return 0;
}

